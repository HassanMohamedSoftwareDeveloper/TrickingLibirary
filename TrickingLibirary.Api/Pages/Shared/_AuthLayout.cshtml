<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrikingLibirary.Api</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        a {
            font-family: Roboto,sans-serif !important;
            box-sizing:border-box;
        }

        body {
            background-color: #121212 !important;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .title {
            text-align: center;
            color: #fff;
            font-size: 32px;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 1.5rem 2rem;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 1px 8px 1px #FAFAFA;
            max-width: 300px;
            width: 100%;
            margin: 0 1rem;
        }

        .form-group {
            margin-bottom: .5rem !important;
            width: 100% !important;
        }

        .error {
            font-size: 13px;
            color: #E53935;
        }

        .form-group > .form-control {
            flex: 1 1 auto;
            line-height: 20px;
            padding: 8px 4px 8px;
            max-width: 100%;
            min-width: 0px;
            width: 100%;
            border: 1px solid #212121;
            font-size: 16px;
            border-radius: 5px;
        }

            .form-group > .form-control:focus {
                outline: none;
                border: 1px solid #1976d2;
                box-shadow: none;
            }

        .form-group > .label-control {
            font-size: 14px;
            font-weight: bold;
        }

        .flex-row {
            text-align: center;
            flex-direction: row !important;
            justify-content: space-evenly;
            margin-bottom: 0 !important;
        }

        hr {
            width: 100%;
            margin: .5rem 0;
        }

        .form-group > button {
            height: 36px;
            min-width: 64px;
            padding: 0 16px;
            background-color: transparent;
            border-radius: 5px;
            border: 1px solid #1976d2;
        }

        .form-group > a {
            text-decoration: none;
        }

    </style>
</head>
<body>
    <h3 class="title">Tricking Libirary</h3>
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>